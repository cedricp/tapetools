{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tapetools.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            //"miDebuggerPath": "/path/to/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "text": "set breakpoint pending on",
                    "description": "Ensures that a breakpoint for abort will be set!",
                    "ignoreFailures": true
                },
                {
                    "text": "break abort",
                    "description": "Breaks on failed asserts",
                    "ignoreFailures": true
                },
                {
                    "text": "set breakpoint pending auto",
                    "description": "Setting back to default behaviour",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}
